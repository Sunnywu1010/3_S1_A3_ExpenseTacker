<div class="col-6 mx-auto">

  <div class="input-group-lg">
    <form action="/category">
      <select
        class="input-group py-2 px-1"
        name="category"
        id="category-selector"
        onchange="submit()"
      >
        <option>Category</option>
        {{#each categories}}
          <option
            class="input-group-list"
            value="{{this.name}}"
          >{{this.name}}</option>
        {{/each}}

      </select>
    </form>
  </div>

  <h2>Total Amount</h2>
  <h1 class="text-center" style="color:#fd7e14;">{{totalAmount}}</h1>

  <ul class="list-group">
    {{#each records}}
      <li class="list-group-item">
        <div class="d-flex align-items-center justify-content-around">
          <i class="{{this.categoryIcon}} "></i>
          <div class="col-5">
            <h4 class="align-middle">
              {{this.name}}
            </h4>
            <p class="m-0">{{this.date}}</p>
          </div>
          <h4>{{this.amount}}</h4>
          <a class="btn btn-success" href="/records/{{this._id}}/edit">edit</a>
          <form
            class="m-0"
            action="./records/{{this._id}}?_method=DELETE"
            method="POST"
            style="display: inline"
          >
            <button class="btn btn-danger" type="submit">delete</button>
          </form>

        </div>
      </li>
    {{/each}}
  </ul>

  <a href="/records/new" class="btn btn-primary my-3">Create</a>
</div>